<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".doctoruploadposts_for_all">



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/imageView_camera"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/button_gallary"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="button_gallary"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Choose Photo from gallary" />


        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/buttonshape"
            android:id="@+id/description"
            android:layout_height="200dp"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10dp"
            android:hint="Enter discription here"
            android:inputType="textMultiLine"
            android:gravity="center"
            android:textColorHint="#AABBCC"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/location"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mesgshape"
            android:textColorHint="#AABBCC"
            android:textSize="20sp" />


        <Button
            android:id="@+id/button_upload"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:onClick="button_upload"
            android:text="Send" />
    </LinearLayout>
</ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>