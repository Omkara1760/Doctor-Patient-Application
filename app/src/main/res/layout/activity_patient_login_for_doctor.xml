<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAED98"
    tools:context=".patient_login_for_doctor">

    <TextView
        android:id="@+id/textView"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/buttonshape2"
        android:gravity="center"
        android:text="Patient Login"
        android:textColor="#1B191A"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mobilenofordoctor"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/buttonshape3"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Patient Register Mb Number"
        android:inputType="phone"
        android:textColorHint="#F9F9FA"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/secretcode_for_doctor"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/buttonshape4"
        android:ems="10"
        android:gravity="center"
        android:hint="Ask Patient For Screte Code"
        android:inputType="number"
        android:textColor="#ED4343"
        android:textColorHint="#F4F1F1"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mobilenofordoctor" />

    <Button

        android:id="@+id/submitpatientloginfo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="233dp"
        android:background="@drawable/buttonshape2"
        android:text="SUBMIT"
        android:textColor="#090909"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secretcode_for_doctor" />
</androidx.constraintlayout.widget.ConstraintLayout>